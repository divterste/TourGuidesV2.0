<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp">

        <TextView
            android:id="@+id/tvCustomCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Package"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_margin="10dp"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="20dp"
            android:scaleType="fitXY">

            <ImageView
                android:id="@+id/ivBanff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customcardcreate"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btnPackageDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know more"
                android:background="@drawable/button_style_know_more"
                app:backgroundTint="@null"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|right"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>