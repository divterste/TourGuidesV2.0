<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/llCustomKnowMoreFull">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Package name"
                android:padding="8dp"
                android:textSize="28sp"
                tools:text="Additional info"
                android:text="Additional info"
                android:textStyle="bold"
                android:textColor="#413F42"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:background="@drawable/button_style_know_more"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travelling from"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="#82f0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travelling To"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="#82de45"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred airlines"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/airlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred airline"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="#82f0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred hotels"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/hotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred hotel"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="#82de45"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start date"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21-07-2022"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="#82f0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End date"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21-08-2022"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="#82de45"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>