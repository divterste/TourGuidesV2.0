<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexActivity"
    android:id="@+id/parent">

    <FrameLayout
        android:id="@+id/flTop"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="50dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:background="@drawable/button_style"
                app:backgroundTint="@null"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"/>

            <HorizontalScrollView
                app:layout_constraintTop_toBottomOf="@id/tvExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="100dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="♨️ Spring"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="☀️ Summer"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="🍂 Autumn"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="❄️ Winter"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="24dp" />

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/flTop"
        app:layout_constraintLeft_toLeftOf="@id/flTop"
        app:layout_constraintBottom_toBottomOf="@id/parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌍 Big World Wonders"
                android:textSize="24sp"
                android:layout_margin="20dp"
                android:textColor="@color/black"/>


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:src="@drawable/summer"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who are we?"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The aim of our initiative is to provide a basic understanding of some common conversations that travelers may encounter in the various locations they will visit after arriving in Canada. ‘Big World Wonders' will be an Android application that allows users to choose their desired package and destination. Summer and winter sessional trips will be available through the application. The mobile app also has login and signup features, and it will ask for your preferences, such as whether you want to go on a family trip, an individual excursion, or a group tour. "
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📦 Our Packages"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>


            <HorizontalScrollView
                app:layout_constraintTop_toBottomOf="@id/tvExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FEF9A7">

                        <ImageButton
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:elevation="20dp"
                            android:background="@color/white"
                            android:src="@drawable/summer"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="☀️ SUMMER"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#eae6e3">

                        <ImageButton
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:elevation="20dp"
                            android:background="@color/white"
                            android:src="@drawable/winter"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="❄️ WINTER"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#feabab">

                        <ImageButton
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:elevation="20dp"
                            android:background="@color/white"
                            android:src="@drawable/custom"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⚙️ CUSTOM"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>