<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexActivity"
    android:id="@+id/parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flTop"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/background"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvExplore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingTop="50dp"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:background="@drawable/button_style"
                        app:backgroundTint="@null"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="10dp"/>

                    <HorizontalScrollView
                        app:layout_constraintTop_toBottomOf="@id/tvExplore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="100dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="Winter"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/white"
                                app:cornerRadius="24dp" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="Summer"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/white"
                                app:cornerRadius="24dp" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="Custom"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:backgroundTint="@color/white"
                                app:cornerRadius="24dp" />


                        </LinearLayout>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Our Packages"
                    android:textSize="24sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"/>

                <HorizontalScrollView
                    app:layout_constraintTop_toBottomOf="@id/tvExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/packagesHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEF9A7"
                            android:layout_margin="10dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="20dp"
                                android:elevation="20dp"
                                android:id="@+id/summerCard">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="â˜€ï¸ SUMMER"
                                    android:textStyle="bold"
                                    android:textAlignment="viewStart"
                                    android:layout_margin="10dp"
                                    android:textSize="16sp"/>

                                <FrameLayout
                                    android:layout_width="280dp"
                                    android:layout_height="240dp"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="20dp"
                                    android:background="@drawable/summer"
                                    android:scaleType="fitXY">

                                    <Button
                                        android:id="@+id/summerKnowMore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="All packages"
                                        android:background="@drawable/button_style_know_more"
                                        app:backgroundTint="@null"
                                        android:layout_margin="20dp"
                                        android:layout_gravity="bottom|right"/>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#99C4C8"
                            android:layout_margin="10dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="20dp"
                                android:elevation="20dp"
                                android:id="@+id/winterCard">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="â›„ WINTER"
                                    android:textStyle="bold"
                                    android:textAlignment="viewStart"
                                    android:layout_margin="10dp"
                                    android:textSize="16sp"/>

                                <FrameLayout
                                    android:layout_width="280dp"
                                    android:layout_height="240dp"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="20dp"
                                    android:background="@drawable/winter"
                                    android:scaleType="fitXY">

                                    <Button
                                        android:id="@+id/winterKnowMore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="All packages"
                                        android:background="@drawable/button_style_know_more"
                                        app:backgroundTint="@null"
                                        android:layout_margin="20dp"
                                        android:layout_gravity="bottom|right"/>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#EEEEEE"
                            android:layout_margin="10dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="20dp"
                                android:elevation="20dp"
                                android:id="@+id/customCard">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="âš™ï¸ CUSTOM"
                                    android:textStyle="bold"
                                    android:textAlignment="viewStart"
                                    android:layout_margin="10dp"
                                    android:textSize="16sp"/>

                                <FrameLayout
                                    android:layout_width="280dp"
                                    android:layout_height="240dp"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="20dp"
                                    android:background="@drawable/custom"
                                    android:scaleType="fitXY">

                                    <Button
                                        android:id="@+id/customKnowMore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="All packages"
                                        android:background="@drawable/button_style_know_more"
                                        app:backgroundTint="@null"
                                        android:layout_margin="20dp"
                                        android:layout_gravity="bottom|right"/>

                                </FrameLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aboutUsBtn"
                    android:text="About Us"
                    android:background="@drawable/button_style"
                    app:backgroundTint="@null"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>