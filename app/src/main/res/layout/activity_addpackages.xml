<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp"
    tools:context=".AddpackagesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Create"
                android:textColor="@color/navy_blue"
                android:textSize="30dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="80dp"
                android:text="predefined package"
                android:textColor="@color/navy_blue"
                android:textSize="30dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/tools"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="5dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#00FFFFFF">

                        <Spinner
                            android:id="@+id/seasontype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"

                            android:background="@drawable/edittextstyle"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textAlignment="center" />

                        <EditText
                            android:id="@+id/packagename"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:hint=" Package name"
                            android:background="@drawable/edittextstyle"
                            android:padding="10dp"
                            />
                        <EditText
                            android:id="@+id/etdescription"
                            app:layout_constraintTop_toBottomOf="@id/selectType"
                            app:layout_constraintStart_toStartOf="@id/user"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:hint="Description"
                            android:background="@drawable/edittextstyle"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/etPrice"
                            app:layout_constraintTop_toBottomOf="@id/selectType"
                            app:layout_constraintStart_toStartOf="@id/user"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:hint="Price"
                            android:background="@drawable/edittextstyle"
                            android:padding="10dp"
                            android:inputType="textEmailAddress"/>
                        <EditText
                            android:id="@+id/etdays"
                            app:layout_constraintTop_toBottomOf="@id/selectType"
                            app:layout_constraintStart_toStartOf="@id/user"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:hint="Days"
                            android:background="@drawable/edittextstyle"
                            android:padding="10dp"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/etnights"
                            app:layout_constraintTop_toBottomOf="@id/selectType"
                            app:layout_constraintStart_toStartOf="@id/user"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:hint="Night"
                            android:background="@drawable/edittextstyle"
                            android:padding="10dp"
                            android:inputType="number"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/proilesubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:background="@drawable/button_style_know_more"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="20dp"/>
                </LinearLayout></ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>