<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomDetailsActivity">

    <LinearLayout
        android:id="@+id/llCustomCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edmonton"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="40dp"
            android:elevation="20dp"
            android:id="@+id/summerCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/etPackageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Package name"
                    android:layout_margin="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/etPackageDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Package description"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="🧍"
                        android:layout_margin="10dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/sourceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Source"
                        android:layout_margin="10dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/destinationType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Destination"
                        android:layout_margin="10dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="🧍"
                        android:layout_margin="10dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/spinnerAirlines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Preferred airline"
                    android:layout_margin="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/spinnerHotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Preferred hotels"
                    android:layout_margin="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start date"
                    android:layout_margin="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End date"
                    android:layout_margin="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>